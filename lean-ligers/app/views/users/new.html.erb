<h1>Sign Up Here</h1>

<%= form_for @user do |f| %>
  <%= f.text_field :first_name, placeholder: "First Name" %>
  <br/>
  <%= f.text_field :last_name, placeholder: "Last Name" %>
  <br/>
   <%= f.text_field :email, placeholder: "Email Address" %>
  <br/>
  <%= f.label :industry, 'Select a Desired Industry' %><br>
	<%= f.select :industry,  [['Web Development'], ['User Experience Design'], ['Project Management']] %>
  <br/>
  <%= f.label :mentor, 'Are you signing up as a mentor?' %>
  <br/>
  Yes <%= f.radio_button :mentor, 'True' %>
  No <%= f.radio_button :mentor, 'False', :checked => true %>
  <br/>
  <%= f.password_field :password, placeholder: "Password" %>
  <br/>
  <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
  <br/>

  <%= f.submit "Sign up" %>
<% end %>

<%= link_to 'Back', new_session_url %>
