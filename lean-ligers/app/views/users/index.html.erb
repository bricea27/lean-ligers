<%= render '/static/header' %>

<p id="notice"><%= notice %></p>
<section class="mentor-directory">
  <div class="container">

    <div class="row"><h1>Meet Our Mentors</h1></div>

    <% @users.each do |user| %>
      <% if user.industry == 'Web Development' %>
        <div class="mentor-card col-sm-4 mentor-web">
          <h1 class="mentor-icon"><i class="fa fa-user fa-2x"></i><h1>
          <h2><%= link_to user.first_name, user %></h2>
          <h3><%= user.industry %></h3>
        </div>
      <% end %>
      <% if user.industry == 'Project Management' %>
        <div class="mentor-card col-sm-4 mentor-pm">
          <h1 class="mentor-icon"><i class="fa fa-user fa-2x"></i><h1>
          <h2><%= link_to user.first_name, user %></h2>
          <h3><%= user.industry %></h3>
        </div>
      <% end %>
      <% if user.industry == 'User Experience Design' %>
        <div class="mentor-card col-sm-4 mentor-ux">
          <h1 class="mentor-icon"><i class="fa fa-user fa-2x"></i><h1>
          <h2><%= link_to user.first_name, user %></h2>
          <h3><%= user.industry %></h3>
        </div>
      <% end %>
    <% end %>

  </div>
</section>
