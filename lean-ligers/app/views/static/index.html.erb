<!DOCTYPE html>

<section class="home">
  <div class="jumbotron">
    <div class="container">

      <%= render 'header' %>

      <h1>CareerCupid</h1>
      <h2>Deserunt dolore consectetur mollit in Lorem.</h2>


      <form class="form-inline quick-search">
        <div class="form-group">
          <label><h4>I'm looking for a career in </h4></label><select type="career" class="form-control" id="industryExample1" placeholder="Tech">
            <option value="product">Product Management</option>
            <option value="design">UI/UX Design</option>
            <option value="dev">Web Development</option>
          </select>
          <button type="submit" class="btn">Go</button>
        </div>
      </form>
    </div>
  </div>
</section>
<section class="info">
  <div class="container">
    <div class="row">
      <h1>New Mentors</h1>
      <% @mentors.each do |mentor| %>
        <div class="col-sm-4">
          <a href="<%= mentor_path(mentor.id) %>" class="info-icon"><i class="fa fa-user fa-2x"></i><a>
          <h2><%= link_to mentor.first_name, mentor_path(mentor.id) %></h2>
          <h3><%= mentor.industry %></h3>
        </div>
      <% end %>

    </div>
  </div>
</section>

<div class="modal fade newUser" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <h1 class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></h1>
      <%= render 'signup' %>
  </div>
</div>
