
<!-- rendering the correct button depending on current relationship -->
<% if @user.mentorships.where(mentee_id: current_user.id, confirmed: true).exists? %>
	<button class="pending mentorship-request <%= @user.id %> pending" disabled="disabled" style="background-color:green;">
		Current Mentor
	</button>
<% elsif @user.mentorships.where(mentee_id: current_user.id, confirmed: false).exists? %>
	<button class="pending mentorship-request <%= @user.id %> pending" disabled="disabled" style="background-color:gray;">
		Request Pending
	</button>
<% else %>
	<button id="<%= @user.id %>" class="available mentorship-request <%= @user.id %> exists btn btn-default mentorship-request">
		Request Mentorship
	</button>
<% end %>

