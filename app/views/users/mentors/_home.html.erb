<h3>Currently Mentoring</h3>
<div class="current mentorships">
	<% if current_user.mentees.any? %>
		<% current_user.mentees.each do |mentee| %>
			<p><%= mentee.mentee.first_name %></p>
			<p><%= mentee.mentee.quote %></p>
			<p>Fun fact <%= mentee.mentee.fun_fact %></p>
			<p>Mentee since <%= mentee.created_at.strftime('%B %d, %Y') %></p>

			<div id="inbox">
				<h4>Conversation with <%= mentee.mentee.first_name %></h4>
				<div class="conversation">
					<div class="subject"></div>
					<div class="body"></div>
				</div>
			</div>

			<button data-method="compose" class="get-message">Message <%= mentee.mentee.first_name %></button>

			<form class="compose">
			  <div class="close-window">&times;</div>
			  <input type="hidden" name="mentee_id" value="<%= mentee.mentee.id %>">
			  <input type="hidden" name="mentor_id" value="<%= current_user.id %>">
			  <input type="text" name="subject" placeholder="Subject">
			  <textarea name="content" placeholder="Body"></textarea>
			  <button id="send-message">Send</button>
			</form>

			<hr>

		<% end %>
	<% else %>
		<p>You have no current mentees</p>
	<% end %>
</div>

<h3>Pending Mentorship Requests</h3>
<div class="pending mentorships">
	<% if current_user.pending_requests.any? %>
		<% current_user.pending_requests.each do |mentee| %>
			<p>Mentee: <%= mentee.mentee.first_name %></p>
			<p> <%= mentee.mentee.quote %></p>
			<p>Fun fact <%= mentee.mentee.fun_fact %></p>
			<p>Request sent at <%= mentee.created_at.strftime('%l:%M%P on %B %d, %Y') %></p>
			<form action="mentors/<%=current_user.id%>/mentorships/<%=mentee.id%>" method="POST">
				<input type="hidden" value="true" name="mentorship[confirmed]">
				<input type="hidden" value="PATCH" name="_method">
				<input type="submit" value="Accept Mentorship Request">
			</form>
			<form action="mentors/<%=current_user.id%>/mentorships/<%=mentee.id%>" method="POST">
				<input type="hidden" value="DELETE" name="_method">
				<input type="submit" value="Reject Mentorship Request">
			</form>
		<% end %>
	<% else %>
		<p>You currently have no pending mentorship requests.</p>
	<% end %>
</div>
