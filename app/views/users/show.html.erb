<%= render partial: '/static/header' %>

<% if @user.industry == 'Web Development' %>
<div class="jumbotron cover-photo web-skin">
	<div class="container">
		<h1><%= @user.first_name %> <%= @user.last_name %></h1>
		<h2><%= @user.industry %></h2>
		<!-- avatar goes here -->
		<h3 class="info-icon absolute-center"><i class="fa fa-user fa-2x"></i><!-- < %= @user.avatar.url(:thumb) %> --></h3>
	</div>
</div>
<% end %>

<% if @user.industry == 'Product Management' %>
<div class="jumbotron cover-photo pm-skin">
	<div class="container">
		<h1><%= @user.first_name %> <%= @user.last_name %></h1>
		<h2><%= @user.industry %></h2>
		<h3 class="info-icon absolute-center"><i class="fa fa-user fa-2x"></i></h3>
	</div>
</div>
<% end %>

<% if @user.industry == 'User Experience Design' %>
<div class="jumbotron cover-photo ux-skin">
	<div class="container">
		<h1><%= @user.first_name %> <%= @user.last_name %></h1>
		<h2><%= @user.industry %></h2>
		<h3 class="info-icon absolute-center"><i class="fa fa-user fa-2x"></i></h3>
	</div>
</div>
<% end %>

<section class="user-homepage">
	<div class="container">

	<p id="notice"><%= notice %></p>



	<div class="row">
		<ul class="social-icons col-md-4 col-md-offset-4">
			<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
			<li><a href="#"><i class="fa fa-twitter"></i></a></li>
			<li><a href="https://<%= @user.site %>" target="_blank"><i class="fa fa-home"></i></a></li>
		</ul>
	</div>
	<div class="row">
		<% if @user.type == 'Mentor' %>
			<%= render 'users/mentors/mentor' %>
		<% else %>
			<%= render 'users/mentees/mentee' %>
		<% end %>
	</div>


	<!-- <p>Seeking: <%= @user.type == 'Mentee' ? 'A mentor in ' : 'A mentee interested in ' %> <%= @user.industry %> </p>
	<p>Email: <%= @user.email %> </p>
	<p>Outside of work, I enjoy <%= @user.quote %> </p> -->
	<div class="col-sm-6 col-sm-offset-3">
		<p class="quote"><i class="fa fa-quote-left"></i><%= @user.quote %><i class="fa fa-quote-right"></i></p>
	</div>
	<div class="col-sm-6 col-sm-offset-3">
		<p class="quote">Fun fact about me is that <%= @user.fun_fact %></p>
	</div>





	</div>
</section>
